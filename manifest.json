{
  "name": "OGP_Checker",
  "short_name" : "OGP_Checker",
  "version" : "0.0.1",
  "manifest_version": 2,
  "description": "ogがいけてるかチェックするやつ",
  "background" : {
    "page": "background.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js","script.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
